# local path
PATH=/usr/local/bin:/usr/local/sbin:$PATH

# ruby path
PATH=/usr/local/opt/ruby/bin:$PATH

# node.js path
NODE_PATH=/usr/local/lib/node
export NODE_PATH
PATH=$PATH:/usr/local/share/npm/bin

# Homebrew settings
export HOMEBREW_NO_EMOJI=1
export HOMEBREW_DEVELOPER=1
export HOMEBREW_NO_AUTO_UPDATE=1
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# Linuxbrew settings
case "$OSTYPE" in
    *linux*)
        export PATH="/home/linuxbrew/.linuxbrew/bin:$PATH"
        #export LD_LIBRARY_PATH="$HOME/.linuxbrew/lib:$LD_LIBRARY_PATH"
        ;;
esac

alias linuxbrew="~/.linuxbrew/bin/brew"

# add bintray keys if we are using `brew pull`
brew() {
    if [[ $1 == "pull"* ]] || [[ $1 == "test-bot-docker" ]]; then
        # start a subshell with these settings
        (source $HOME/.bintray_settings; command brew $@)
    else
        command brew $@
    fi
}

linuxbrew() {
    if [[ $1 == "pull" ]]; then
        (source $HOME/bintray_settings; command linuxbrew $@)
    else
        command linuxbrew $@
    fi
}

export PATH
