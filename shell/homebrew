# local path
PATH=/usr/local/bin:/usr/local/sbin:$PATH

# ruby path
PATH=/usr/local/opt/ruby/bin:$PATH

# node.js path
NODE_PATH=/usr/local/lib/node
export NODE_PATH
PATH=$PATH:/usr/local/share/npm/bin

# turn off homebrew emoji
export HOMEBREW_NO_EMOJI="you bet"

# homebrew cask options
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# homebrew developer settings
export HOMEBREW_DEVELOPER=1

# linuxbrew?
case "$OSTYPE" in
    *linux*)
        export PATH="$HOME/.linuxbrew/bin:$PATH"
        export LD_LIBRARY_PATH="$HOME/.linuxbrew/lib:$LD_LIBRARY_PATH"
        ;;
esac

# add bintray keys if we are using `brew pull`
brew() {
    if [[ $@ == "pull" ]]; then
        # start a subshell with these settings
        (source $HOME/.bintray_settings; command brew pull $@)
    else
        command brew $@
    fi
}

export PATH
