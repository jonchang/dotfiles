source "$DOTFILES_SHELL_DIR/prompt_utils"
source "$DOTFILES_SHELL_DIR/prompt_segments"
source "$DOTFILES_ZSH_DIR/prompt_segments"
source "$DOTFILES_SHELL_DIR/prompt_vcs"

prompt_host() {
    local bg='default'
    local fg='white'

    if [[ $UID -eq 0 ]]; then
        bg='red'
    fi

    if [[ -n $SSH_CLIENT ]]; then
        fg='yellow'
        prompt_segment $bg $fg '%n@%m'
    fi
}

prompt_dir() {
    prompt_segment blue white '%~'
}

prompt_last_rc() {
    [[ $LAST_CMD_RC -ne 0 ]] && prompt_segment red white "$LAST_CMD_RC"
}

function zle-line-init {
    set_prompt
    zle reset-prompt
}
function zle-keymap-select {
    set_prompt
    zle reset-prompt
}
zle -N zle-line-init
zle -N zle-keymap-select

prompt_build() {
    RPROMPT_SEGMENTS=''
    prompt_setup_segments
    CURRENT_BG='NONE'
    prompt_host
    if prompt_vcs_repo; then
        prompt_vcs_status
        prompt_vcs_action
    else
        prompt_dir
    fi
    prompt_last_rc
    prompt_end
}

function contains() {
  [[ "$2" == *$1* ]]
}

set_prompt() {
    __git_ps1_vars
    PROMPT="$(prompt_build)"
}

